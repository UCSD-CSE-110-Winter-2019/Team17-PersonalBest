<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:id="@+id/pending_list_item">

    <Button
        android:id="@+id/pending_hist_button"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorButton"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Lisa"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/pending_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/colorButton"
        app:srcCompat="@drawable/baseline_done_black_18dp" />

    <ImageButton
        android:id="@+id/pending_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorButton"
        app:srcCompat="@drawable/baseline_clear_black_18dp" />

</LinearLayout>
